# BodyColumns(employee)
- IF: ${ dialog.booked }
    - ${join(createArray(
            Avatar(employee.avatarUrl, employee.firstName, employee.lastName, '50px', '35px'), 
            ClickableName(employee.displayName, employee.firstName, employee.lastName, '150px', 'Small', 'Default', 'GetPeopleOnClientWork'),
            ClientColumn(employee.clients, 'stretch', 'Center')
        ), ',')}
- ELSE:
    - ${join(createArray(
            Avatar(employee.avatarUrl, employee.firstName, employee.lastName, '50px', '35px'), 
            ClickableName(employee.displayName, employee.firstName, employee.lastName, 'stretch', 'Small', 'Default', 'GetPeopleOnClientWork'),
            BodyColumn(DaysText(employee.BilledDays, true), 'stretch'), 
            ImageColumn(if(employee.InOffice, GreenCircle(), RedCircle())), 
            BodyColumn(employee.LastSeen, 'stretch')
        ), ',')}

